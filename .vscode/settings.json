{
    // ==================== //
    //      PYTHONPATH      //
    // ==================== //

    "terminal.integrated.env.windows": {
        "PYTHONPATH": "${workspaceFolder}/dsa_and_algorithms:${workspaceFolder}/coding_interview_problems:${workspaceFolder}/competitive_programming_problems:${workspaceFolder}/curated_list_of_75_leetcode_problems:${workspaceFolder}/amazon_interview_prep:${workspaceFolder}/facebook_interview_prep:${env:PYTHONPATH}"
    },
    "terminal.integrated.env.linux": {
        "PYTHONPATH": "${workspaceFolder}/dsa_and_algorithms:${workspaceFolder}/coding_interview_problems:${workspaceFolder}/competitive_programming_problems:${workspaceFolder}/curated_list_of_75_leetcode_problems:${workspaceFolder}/amazon_interview_prep:${workspaceFolder}/facebook_interview_prep:${env:PYTHONPATH}"
    },
    "terminal.integrated.env.osx": {
        "PYTHONPATH": "${workspaceFolder}/dsa_and_algorithms:${workspaceFolder}/coding_interview_problems:${workspaceFolder}/competitive_programming_problems:${workspaceFolder}/curated_list_of_75_leetcode_problems:${workspaceFolder}/amazon_interview_prep:${workspaceFolder}/facebook_interview_prep:${env:PYTHONPATH}"
    },

    // ==================== //
    //     Code Quality     //
    // ==================== //

    "[python]": {
        "editor.rulers": [
            72, // PEP 8 recommendation for docstrings or comments
            88, // default max line-length in `black`
        ],
        "editor.codeActionsOnSave": {
            "source.fixAll": true,
            "source.organizeImports": true,
        },
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-python.black-formatter",
    },

    // ==================== //
    //        Testing       //
    // ==================== //

    "python.testing.autoTestDiscoverOnSaveEnabled": true,
    "python.testing.pytestEnabled": true,
}
